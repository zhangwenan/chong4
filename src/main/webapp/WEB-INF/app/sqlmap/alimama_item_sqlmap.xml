<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AlimamaItem">

    <resultMap type="com.wenlie.chong4.bean.AlimamaItem" id="alimamaItem">
        <id column="id" property="id"/>
        <result column="item_title" property="itemTitle"/>
        <result column="item_id" property="itemId"/>
    </resultMap>


    <select id="getByItemId" parameterType="long" resultMap="alimamaItem">
        SELECT id,item_id,item_title FROM alimama_item
        WHERE item_id = #{VALUE} limit 1
    </select>

    <select id="countItemId" parameterType="long" resultType="int">
        SELECT count(id) FROM alimama_item WHERE item_id = #{VALUE}
    </select>

    <insert id="add" parameterType="alimamaItem">
        INSERT INTO alimama_item (item_id,item_title)
        VALUES
        (
        #{itemId},
        #{itemTitle}
        )
    </insert>

    <insert id="batchAdd">
        INSERT INTO alimama_item (item_id,item_title)
        VALUES

        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.itemId},
            #{item.itemTitle}
            )
        </foreach>
    </insert>

    <update id="update" parameterType="alimamaItem">
        UPDATE alimama_item SET item_id=#{itemId},item_title=#{itemTitle}
        WHERE item_id=#{itemId}
    </update>

