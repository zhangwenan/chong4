<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="IndexUpdate">

    <resultMap type="com.wenlie.chong4.bean.IndexUpdate" id="indexUpdate">
        <id column="id" property="id"/>
        <result column="begin_id" property="beginId"/>
        <result column="last_update_time" property="lastUpdateTime"/>
    </resultMap>


    <select id="getOne" resultMap="indexUpdate">
        SELECT id,begin_id,last_update_time FROM index_update limit 1
    </select>

    <update id="update" parameterType="indexUpdate">
        UPDATE index_update SET begin_id=#{beginId},last_update_time=#{lastUpdateTime}
    </update>

</mapper>