<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="KeywordItemId">

    <resultMap type="com.wenlie.chong4.bean.KeywordItemId" id="keywordItemId">
        <id column="id" property="id"/>
        <result column="keyword" property="keyword"/>
        <result column="itemid" property="itemId"/>
    </resultMap>


    <select id="getList" parameterType="String" resultMap="keywordItemId">
        SELECT id,keyword,itemid FROM keyword_itemid
        WHERE keyword = #{VALUE}
        LIMIT 40
    </select>

    <!--<select id="countQQ" resultType="int">
        SELECT COUNT(id) FROM qq
        <where>
            <if test="id != null and id > 0">
                id=#{id}
            </if>
            <if test="qq != null and qq != ''">
                AND qq=#{qq}
            </if>
        </where>
    </select>-->

    <insert id="add" parameterType="keywordItemId">
        INSERT INTO keyword_itemid (keyword,itemid) VALUES (#{keyword},#{itemId})
    </insert>

    <insert id="batchAdd">
        INSERT INTO keyword_itemid (keyword,itemid)
        VALUES

        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.keyword},
            #{item.itemId}
            )
        </foreach>
    </insert>


    <!--<delete id="delQQByQQNumber" parameterType="String">
        DELETE FROM qq WHERE qq=#{value}
    </delete>-->

</mapper>